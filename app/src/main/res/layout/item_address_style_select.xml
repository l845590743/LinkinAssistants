<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="8dp"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/item_address_style_select_icon"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:background="@drawable/number_address_toast_bg_orange" />
    
    <TextView 
        android:id="@+id/item_address_style_select_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="#aa000000"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/item_address_style_select_icon"
        android:text="颜色"/>

    <ImageView
        android:id="@+id/item_address_style_select_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"/>

</RelativeLayout>
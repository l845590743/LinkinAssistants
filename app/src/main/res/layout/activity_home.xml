<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.linkinassistant.activity.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp"
        android:background="@mipmap/blue_bkg">

        <ImageView
            android:id="@+id/home_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/logo"/>

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_toRightOf="@+id/home_logo"
            android:layout_alignTop="@+id/home_logo"
            android:layout_marginLeft="25dp"
            android:textColor="#000"
            android:text="@string/home_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/home_title"
            android:layout_below="@+id/home_title"
            android:textColor="#ff2600"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="@string/home_des"/>

        <ImageView
            android:id="@+id/home_setting"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:background="@drawable/shape_home_setting"
            android:src="@mipmap/setting"/>

    </RelativeLayout>

    <GridView
        android:padding="5dp"
        android:id="@+id/home_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="6dp"
        android:horizontalSpacing="5dp"
        android:numColumns="2">

    </GridView>

</LinearLayout>

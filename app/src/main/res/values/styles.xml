<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="CommentTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">#16b8f4</item>
    </style>

    <!-- 号码归属地样式选择对话框 -->
    <style name="ToastStyleSelect" parent="@android:style/Theme.Dialog">
        <!-- 去掉对话框标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 对话框背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 对话框展示动画 -->
        <item name="android:windowAnimationStyle">@style/ToastStyleSelectAnimation</item>
    </style>

    <!-- 号码归属地样式选择对话框动画效果 -->
    <!--仿照键盘弹出的效果 <item name="android:windowAnimationStyle">@android:style/Animation.InputMethod</item>-->
    <style name="ToastStyleSelectAnimation">
        <item name="android:windowEnterAnimation">@anim/input_method_enter</item>
        <item name="android:windowExitAnimation">@anim/input_method_exit</item>
    </style>


</resources>
